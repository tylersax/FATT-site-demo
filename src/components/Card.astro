---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  delay?: string;
}

const { title, description, icon, delay = "0s" } = Astro.props;
---

<div 
  class="bg-white/10 backdrop-blur-md rounded-lg border border-white/20 p-8 hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-2 animate-on-scroll"
  style={`animation-delay: ${delay};`}
>
  {icon && (
    <div class="text-4xl mb-4 text-center">
      {icon}
    </div>
  )}
  <h3 class="text-2xl font-bold mb-4 text-white">{title}</h3>
  <p class="text-blue-100 leading-relaxed">{description}</p>
</div>

